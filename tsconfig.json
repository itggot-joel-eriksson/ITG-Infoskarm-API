{
    "compilerOptions": {
        "target": "es2015",
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": false,
        "sourceMap": false,
        "outDir": "./dist",
		"declaration": true,
		"declarationDir": "./typings/generated",
        "noImplicitReturns": true,
		"removeComments": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
		"dist"
    ] 
}
