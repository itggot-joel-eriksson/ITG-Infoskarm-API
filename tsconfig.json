{
    "compilerOptions": {
        "target": "ES6",
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": false,
        "sourceMap": false,
        "outDir": "./dist",
		"declaration": true,
		"declarationDir": "./typings/generated",
        "noImplicitReturns": true,
		"removeComments": true,
		"lib": [
			"dom",
			"es2016",
			"es2016.array.include"
		]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
		"dist",
		"src/config.ts"
    ] 
}
